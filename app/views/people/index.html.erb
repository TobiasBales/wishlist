<% page_title(t("people.index.title")) %>
<%= render(B::Page.new(crumbs: [
  B::Crumb.new(text: t("people.index.title"), to: people_path)
])) do %>
  <%= render(B::List.new(id: "people")) do %>
    <% @people.each do |person| %>
      <%= render(B::List::Item.new(text: person.name, to: person)) %>
    <% end %>
  <% end %>
  <%= render(B::Form::Actions.new) do %>
    <%= render(B::Button.new(text: t("people.actions.new"), to: new_person_path)) %>
  <% end %>
<% end %>
