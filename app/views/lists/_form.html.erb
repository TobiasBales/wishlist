<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render(B::Form::Input.new(form: form, field: :name)) %>
  <%= render(B::Form::Select.new(form: form, field: :person_id, options: options_for_select(@people.map { |p| [p.name, p.id]}))) %>

  <%= render(B::Form::Actions.new) do %>
    <%= render(B::Form::Button.new(form: form, label: t("general.save"), type: :submit)) %>
  <% end %>
<% end %>
