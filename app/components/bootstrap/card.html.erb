<div class="card">
    <% if image.present? %>
        <div class="ratio ratio-16x9">
            <%= image_tag image, class: "card-img-top object-fit-cover" %>
        </div>
    <% end %>
    <div class="card-body">
        <% if title.present? %>
            <h5 class="card-title elipsis"><%= title %></h5>
        <% end %>
        <% if subtitle.present? %>
            <h6 class="card-subtitle mb-2 text-muted elipsis"><%= subtitle %></h6>
        <% end %>
        <% if text.present? %>
            <p class="card-text"><%= text %></p>
        <% end %>
        <% if body? %>
            <%= body %>
        <% end %>
    </div>
    <%= content %>
</div>
